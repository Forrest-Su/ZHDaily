<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@color/myColorPrimary">

    <TextView
        android:id="@+id/tv_z_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp"
        android:text="@string/z"
        android:textStyle="bold|italic"
        android:textColor="@color/grey_f1f1f1"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_z_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:text="@string/z"
        android:textColor="@color/grey_f1f1f1"
        android:textSize="56sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/tv_z_1"
        app:layout_constraintStart_toEndOf="@+id/tv_z_1" />

    <TextView
        android:id="@+id/tv_z_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/z"
        android:textColor="@color/grey_f1f1f1"
        android:textSize="72sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/tv_z_2"
        app:layout_constraintStart_toEndOf="@+id/tv_z_2" />


</android.support.constraint.ConstraintLayout>